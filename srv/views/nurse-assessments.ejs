<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Assessments - Al-Shorouk Radiology</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/custom.css">
</head>
<body>
    <%- include('navigation') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>
                        <i class="fas fa-clipboard-check text-primary"></i>
                        My Assessments
                    </h2>
                    <a href="/nurse/search-patient" class="btn btn-success">
                        <i class="fas fa-plus"></i> New Assessment
                    </a>
                </div>
            </div>
        </div>

        <% if (visits && visits.length > 0) { %>
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-list"></i> In-Progress Assessments
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Visit ID</th>
                                    <th>Patient Name</th>
                                    <th>Medical Number</th>
                                    <th>Age</th>
                                    <th>Visit Date</th>
                                    <th>Visit Status</th>
                                    <th>Assessment Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% visits.forEach(visit => { %>
                                    <tr>
                                        <td>
                                            <small class="text-muted font-monospace">
                                                <%= visit.visit_id.substring(0, 20) %>...
                                            </small>
                                        </td>
                                        <td>
                                            <strong><%= visit.patient_name %></strong>
                                        </td>
                                        <td><%= visit.medical_number || 'N/A' %></td>
                                        <td>
                                            <% if (visit.calculated_age !== 'N/A') { %>
                                                <%= visit.calculated_age %> years
                                            <% } else { %>
                                                <span class="text-muted">N/A</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <%= new Date(visit.visit_date).toLocaleDateString('en-US', {
                                                year: 'numeric',
                                                month: 'short',
                                                day: 'numeric'
                                            }) %>
                                        </td>
                                        <td>
                                            <% if (visit.visit_status === 'completed') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Completed
                                                </span>
                                            <% } else if (visit.visit_status === 'in_progress') { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock"></i> In Progress
                                                </span>
                                            <% } else if (visit.visit_status === 'open') { %>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-folder-open"></i> Open
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">
                                                    <%= visit.visit_status %>
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (visit.assessment_id) { %>
                                                <% if (visit.is_draft) { %>
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-file-alt"></i> Draft
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Submitted
                                                    </span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-exclamation-circle"></i> Not Started
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="/nurse/assessment/<%= visit.visit_id %>" 
                                                   class="btn btn-sm btn-primary" 
                                                   title="<%= visit.assessment_id ? 'View/Edit Assessment' : 'Start Assessment' %>">
                                                    <i class="fas fa-<%= visit.assessment_id ? 'edit' : 'plus' %>"></i>
                                                    <%= visit.assessment_id ? 'Edit' : 'Start' %>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        <% } else { %>
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-clipboard-list text-muted" style="font-size: 4rem;"></i>
                    <h4 class="mt-3 text-muted">No Assessments in Progress</h4>
                    <p class="text-muted">
                        You don't have any assessments in progress at the moment.
                    </p>
                    <a href="/nurse/search-patient" class="btn btn-success mt-3">
                        <i class="fas fa-plus"></i> Start New Assessment
                    </a>
                </div>
            </div>
        <% } %>

        <div class="mt-4">
            <a href="/nurse" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
