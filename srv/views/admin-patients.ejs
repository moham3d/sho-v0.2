<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', { title: 'Patient Management' }) %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>

<body class="admin-compact">
    <div class="d-flex vh-100 bg-light overflow-hidden">
        <!-- Sidebar -->
        <%- include('partials/admin-sidebar', { currentPage: 'patients' }) %>

            <!-- Main Content -->
            <div class="flex-grow-1 d-flex flex-column h-100 overflow-hidden">
                <!-- Header -->
                <%- include('partials/admin-header', { title: 'Patients' }) %>

                    <!-- Scrollable Content -->
                    <main class="flex-grow-1 overflow-auto p-4">

                        <% if (notification) { %>
                            <div class="alert alert-<%= notification.type === 'error' ? 'danger' : 'success' %> alert-dismissible fade show mb-4 border-0 shadow-sm"
                                role="alert">
                                <% if(notification.type==='success' ) { %><i class="bi bi-check-circle-fill me-2"></i>
                                    <% } %>
                                        <% if(notification.type==='error' ) { %><i
                                                class="bi bi-exclamation-triangle-fill me-2"></i>
                                            <% } %>
                                                <%= notification.message %>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                        aria-label="Close"></button>
                            </div>
                            <% } %>

                                <div class="card border-0 shadow-sm rounded-3">
                                    <div
                                        class="card-header bg-white border-0 py-3 d-flex flex-wrap justify-content-between align-items-center gap-3">
                                        <div class="d-flex gap-2">
                                            <h5 class="mb-0 fw-bold">Patient Records</h5>
                                            <span class="badge bg-light text-secondary rounded-pill border">
                                                <%= patients.length %> Registered
                                            </span>
                                        </div>
                                        <a href="/admin/patients/new" class="btn btn-primary rounded-pill px-4">
                                            <i class="bi bi-plus-lg me-2"></i>New Patient
                                        </a>
                                    </div>

                                    <!-- Filters (Refactored Clean Search) -->
                                    <div class="card-body p-3">
                                        <form action="/admin/patients" method="GET">
                                            <div class="row g-2 align-items-center">
                                                <!-- Search Input -->
                                                <div class="col">
                                                    <div class="input-group">
                                                        <span class="input-group-text bg-light border-end-0"><i
                                                                class="bi bi-search text-muted"></i></span>
                                                        <input type="text" class="form-control border-start-0 ps-0"
                                                            name="search"
                                                            placeholder="Search by Name, SSN, or Medical ID..."
                                                            value="<%= filters.search %>">
                                                    </div>
                                                </div>

                                                <!-- Filter Toggle -->
                                                <div class="col-auto">
                                                    <button
                                                        class="btn <%= filters.gender && filters.gender !== 'all' ? 'btn-primary' : 'btn-outline-secondary' %>"
                                                        type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#patientFilters" aria-expanded="false">
                                                        <i class="bi bi-sliders me-1"></i>Filters
                                                    </button>
                                                </div>

                                                <!-- Submit -->
                                                <div class="col-auto">
                                                    <button type="submit" class="btn btn-primary">Search</button>
                                                </div>
                                            </div>

                                            <!-- Advanced Filters (Collapsible) -->
                                            <div class="collapse mt-3 <%= filters.gender && filters.gender !== 'all' ? 'show' : '' %>"
                                                id="patientFilters">
                                                <div class="bg-light rounded p-3">
                                                    <div class="row g-3">
                                                        <div class="col-md-6">
                                                            <label
                                                                class="form-label small fw-bold text-muted text-uppercase">Gender</label>
                                                            <select class="form-select" name="gender">
                                                                <option value="all">All Genders</option>
                                                                <option value="Male" <%=filters.gender==='Male'
                                                                    ? 'selected' : '' %>>Male</option>
                                                                <option value="Female" <%=filters.gender==='Female'
                                                                    ? 'selected' : '' %>>Female</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-12 text-end">
                                                            <a href="/admin/patients"
                                                                class="text-decoration-none small text-danger">
                                                                <i class="bi bi-x-circle me-1"></i>Reset Filters
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle mb-0">
                                            <thead class="bg-light">
                                                <tr>
                                                    <th class="ps-4 py-3 text-uppercase text-secondary small fw-bold">
                                                        Patient Name</th>
                                                    <th class="py-3 text-uppercase text-secondary small fw-bold">
                                                        Identifiers</th>
                                                    <th class="py-3 text-uppercase text-secondary small fw-bold">Contact
                                                    </th>
                                                    <th class="py-3 text-uppercase text-secondary small fw-bold">
                                                        Demographics</th>
                                                    <th
                                                        class="pe-4 py-3 text-end text-uppercase text-secondary small fw-bold">
                                                        Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (patients && patients.length> 0) { %>
                                                    <% patients.forEach(p=> { %>
                                                        <tr>
                                                            <td class="ps-4">
                                                                <div class="d-flex align-items-center">
                                                                    <div
                                                                        class="avatar-circle <%= p.gender === 'Female' ? 'bg-danger-subtle text-danger' : 'bg-primary-subtle text-primary' %> me-3 small fw-bold">
                                                                        <%= (p.full_name || 'U'
                                                                            ).charAt(0).toUpperCase() %>
                                                                    </div>
                                                                    <div class="fw-bold text-dark">
                                                                        <%= p.full_name %>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex flex-column small">
                                                                    <span class="text-muted"><i
                                                                            class="bi bi-card-text me-1"></i>
                                                                        <%= p.ssn %>
                                                                    </span>
                                                                    <span class="text-dark fw-medium"><i
                                                                            class="bi bi-hospital me-1"></i>
                                                                        <%= p.medical_number || 'N/A' %>
                                                                    </span>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <% if (p.mobile_number) { %>
                                                                    <div class="small"><i
                                                                            class="bi bi-phone text-muted me-1"></i>
                                                                        <%= p.mobile_number %>
                                                                    </div>
                                                                    <% } else { %>
                                                                        <span class="text-muted small">N/A</span>
                                                                        <% } %>
                                                            </td>
                                                            <td>
                                                                <div class="small text-muted">
                                                                    <%= p.gender %>,
                                                                        <%= p.date_of_birth ? new Date().getFullYear() -
                                                                            new Date(p.date_of_birth).getFullYear()
                                                                            : '?' %> yrs
                                                                </div>
                                                                <div class="text-muted text-xs">
                                                                    <%= p.date_of_birth ? new
                                                                        Date(p.date_of_birth).toLocaleDateString()
                                                                        : 'N/A' %>
                                                                </div>
                                                            </td>
                                                            <td class="pe-4 text-end">
                                                                <div class="btn-group">
                                                                    <a href="/admin/patients/<%= p.ssn %>/edit"
                                                                        class="btn btn-sm btn-light border"
                                                                        title="Edit">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </a>
                                                                    <!-- Using form for delete action -->
                                                                    <button type="button"
                                                                        class="btn btn-sm btn-light border text-danger"
                                                                        title="Delete" data-bs-toggle="modal"
                                                                        data-bs-target="#deletePtModal<%= p.ssn %>">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </div>

                                                                <!-- Delete Modal -->
                                                                <div class="modal fade" id="deletePtModal<%= p.ssn %>"
                                                                    tabindex="-1" aria-hidden="true">
                                                                    <div
                                                                        class="modal-dialog modal-sm modal-dialog-centered">
                                                                        <div class="modal-content border-0 shadow">
                                                                            <div class="modal-body text-center p-4">
                                                                                <div class="text-danger mb-3"><i
                                                                                        class="bi bi-exclamation-circle display-1"></i>
                                                                                </div>
                                                                                <h5 class="fw-bold mb-2">Delete Patient?
                                                                                </h5>
                                                                                <p class="text-muted small mb-4">
                                                                                    Deleting this patient will also
                                                                                    remove <strong>ALL</strong> their
                                                                                    visits and assessments. This cannot
                                                                                    be undone.</p>
                                                                                <form
                                                                                    action="/admin/patients/<%= p.ssn %>/delete"
                                                                                    method="POST">
                                                                                    <button type="button"
                                                                                        class="btn btn-light w-100 mb-2"
                                                                                        data-bs-dismiss="modal">Cancel</button>
                                                                                    <button type="submit"
                                                                                        class="btn btn-danger w-100">Delete
                                                                                        Everything</button>
                                                                                </form>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>

                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="5" class="text-center py-5">
                                                                        <div class="text-muted">
                                                                            <i
                                                                                class="bi bi-person-x display-4 mb-3 d-block opacity-25"></i>
                                                                            <p class="mb-0">No patients found.</p>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                    </main>
            </div>
    </div>
    <%- include('partials/scripts') %>
</body>

</html>