<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error - Al-Shorouk Radiology</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/custom.css">
    <style>
        .error-container {
            min-height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .error-icon {
            font-size: 5rem;
            opacity: 0.3;
        }
        .error-code {
            font-size: 6rem;
            font-weight: bold;
            color: #dc3545;
            line-height: 1;
        }
        .stack-trace {
            max-height: 400px;
            overflow-y: auto;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <% if (user && user.userId) { %>
        <%- include('navigation') %>
    <% } %>

    <div class="container error-container">
        <div class="row justify-content-center w-100">
            <div class="col-md-8 text-center">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <% if (error.status === 404) { %>
                            <i class="fas fa-search error-icon text-warning"></i>
                            <div class="error-code">404</div>
                            <h2 class="mt-3">Page Not Found</h2>
                            <p class="lead text-muted">
                                The page you're looking for doesn't exist or has been moved.
                            </p>
                        <% } else if (error.status >= 500) { %>
                            <i class="fas fa-exclamation-triangle error-icon text-danger"></i>
                            <div class="error-code"><%= error.status || 500 %></div>
                            <h2 class="mt-3">Server Error</h2>
                            <p class="lead text-muted">
                                <%= message %>
                            </p>
                        <% } else { %>
                            <i class="fas fa-exclamation-circle error-icon text-warning"></i>
                            <div class="error-code"><%= error.status || 'Error' %></div>
                            <h2 class="mt-3">Something Went Wrong</h2>
                            <p class="lead text-muted">
                                <%= message %>
                            </p>
                        <% } %>

                        <% if (error.stack && typeof error.stack === 'string' && error.stack.length > 0) { %>
                            <div class="alert alert-danger text-left mt-4">
                                <h5 class="alert-heading">
                                    <i class="fas fa-bug"></i> Error Details (Development Mode)
                                </h5>
                                <hr>
                                <div class="stack-trace">
                                    <pre class="mb-0 text-start"><%= error.stack %></pre>
                                </div>
                            </div>
                        <% } %>

                        <div class="mt-4">
                            <% if (user && user.userId) { %>
                                <a href="/" class="btn btn-primary me-2">
                                    <i class="fas fa-home"></i> Go to Dashboard
                                </a>
                            <% } else { %>
                                <a href="/login" class="btn btn-primary me-2">
                                    <i class="fas fa-sign-in-alt"></i> Go to Login
                                </a>
                            <% } %>
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Go Back
                            </a>
                        </div>

                        <% if (error.status === 404) { %>
                            <div class="mt-4 text-muted">
                                <small>
                                    If you think this is a mistake, please contact support.
                                </small>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
