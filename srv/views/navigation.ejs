<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary" role="navigation" aria-label="Main navigation">
    <!-- Skip Links for Keyboard Navigation -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <a href="#navbarNav" class="skip-link">Skip to navigation</a>

    <div class="container">
        <a class="navbar-brand" href="/">
            <i class="fas fa-hospital-alt me-2" aria-hidden="true"></i>Al-Shorouk Radiology
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <% if (user) { %>
                    <% if (user.role==='nurse' ) { %>
                        <li class="nav-item">
                            <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>"
                                href="/nurse">
                                <i class="fas fa-columns me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link <%= typeof currentPage !== 'undefined' && (currentPage === 'history' || currentPage === 'assessments') ? 'active' : '' %>"
                                href="/nurse/history">
                                <i class="fas fa-history me-1"></i> History
                            </a>
                        </li>
                        <% } else if (user.role==='radiologist' ) { %>
                            <li class="nav-item">
                                <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>"
                                    href="/radiologist">
                                    <i class="fas fa-columns me-1"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'history' ? 'active' : '' %>"
                                    href="/radiologist/history">
                                    <i class="fas fa-history me-1"></i> History
                                </a>
                            </li>
                            <% } else if (user.role==='admin' ) { %>
                                <li class="nav-item">
                                    <a class="nav-link <%= typeof currentPage !== 'undefined' && currentPage === 'dashboard' ? 'active' : '' %>"
                                        href="/admin">
                                        <i class="fas fa-tachometer-alt me-1"></i> Dashboard
                                    </a>
                                </li>
                                <% } %>
                                    <% } %>
            </ul>
            <% if (user) { %>
                <li class="nav-item">
                    <span class="nav-link user-info">
                        <% if (user.role==='admin' ) { %>
                            <i class="fas fa-user-shield me-1" aria-hidden="true"></i>
                            <% } else if (user.role==='nurse' ) { %>
                                <i class="fas fa-user-nurse me-1" aria-hidden="true"></i>
                                <% } else if (user.role==='radiologist' ) { %>
                                    <i class="fas fa-user-md me-1" aria-hidden="true"></i>
                                    <% } else { %>
                                        <i class="fas fa-user me-1" aria-hidden="true"></i>
                                        <% } %>
                                            Welcome, <%= user.fullName %> <span class="user-role">(<%= user.role %>
                                                        )</span>
                    </span>
                </li>
                <li class="nav-item">
                    <form method="POST" action="/logout" class="d-inline">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-outline-light btn-sm logout-btn"
                            aria-label="Logout from the system">
                            <i class="fas fa-sign-out-alt me-1" aria-hidden="true"></i>Logout
                        </button>
                    </form>
                </li>
                <% } %>
                    </ul>
        </div>
    </div>
</nav>