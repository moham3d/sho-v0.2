<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', { title: 'Visit Management' }) %>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>

<body class="admin-compact">
    <div class="d-flex vh-100 bg-light overflow-hidden">
        <!-- Sidebar -->
        <%- include('partials/admin-sidebar', { currentPage: 'visits' }) %>

            <!-- Main Content -->
            <div class="flex-grow-1 d-flex flex-column h-100 overflow-hidden">
                <!-- Header -->
                <%- include('partials/admin-header', { title: 'Visits' }) %>

                    <!-- Scrollable Content -->
                    <main class="flex-grow-1 overflow-auto p-4">

                        <% if (notification) { %>
                            <div class="alert alert-<%= notification.type === 'error' ? 'danger' : 'success' %> alert-dismissible fade show mb-4 border-0 shadow-sm"
                                role="alert">
                                <% if(notification.type==='success' ) { %><i class="bi bi-check-circle-fill me-2"></i>
                                    <% } %>
                                        <% if(notification.type==='error' ) { %><i
                                                class="bi bi-exclamation-triangle-fill me-2"></i>
                                            <% } %>
                                                <%= notification.message %>
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                        aria-label="Close"></button>
                            </div>
                            <% } %>

                                <!-- Stats Summary -->
                                <div class="row g-4 mb-4">
                                    <div class="col-md-3">
                                        <div class="card border-0 shadow-sm overflow-hidden"
                                            style="border-left: 4px solid #0d6efd !important;">
                                            <div class="card-body p-3">
                                                <small class="text-muted text-uppercase fw-bold">Total Visits</small>
                                                <h3 class="mb-0 fw-bold">
                                                    <%= visits.length %>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card border-0 shadow-sm overflow-hidden"
                                            style="border-left: 4px solid #198754 !important;">
                                            <div class="card-body p-3">
                                                <small class="text-muted text-uppercase fw-bold">Completed</small>
                                                <h3 class="mb-0 fw-bold text-success">
                                                    <%= visits.filter(v=> v.visit_status === 'completed').length %>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="card border-0 shadow-sm overflow-hidden"
                                            style="border-left: 4px solid #ffc107 !important;">
                                            <div class="card-body p-3">
                                                <small class="text-muted text-uppercase fw-bold">Pending</small>
                                                <h3 class="mb-0 fw-bold text-warning">
                                                    <%= visits.filter(v=> v.visit_status === 'pending').length %>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="card border-0 shadow-sm rounded-3">
                                    <div
                                        class="card-header bg-white border-0 py-3 d-flex flex-wrap justify-content-between align-items-center gap-3">
                                        <div class="d-flex gap-2">
                                            <h5 class="mb-0 fw-bold">Visit Log</h5>
                                        </div>
                                        <a href="/admin/visits/new" class="btn btn-primary rounded-pill px-4">
                                            <i class="bi bi-plus-lg me-2"></i>New Visit
                                        </a>
                                    </div>

                                    <!-- Filters (Refactored Clean Search) -->
                                    <div class="card-body p-3">
                                        <form action="/admin/visits" method="GET">
                                            <div class="row g-2 align-items-center">
                                                <!-- Search Input -->
                                                <div class="col">
                                                    <div class="input-group">
                                                        <span class="input-group-text bg-light border-end-0"><i
                                                                class="bi bi-search text-muted"></i></span>
                                                        <input type="text" class="form-control border-start-0 ps-0"
                                                            name="search" placeholder="Patient Name, SSN..."
                                                            value="<%= filters.search %>">
                                                    </div>
                                                </div>

                                                <!-- Filter Toggle -->
                                                <div class="col-auto">
                                                    <button
                                                        class="btn <%= (filters.status && filters.status !== 'all') || (filters.department && filters.department !== 'all') || filters.date_from ? 'btn-primary' : 'btn-outline-secondary' %>"
                                                        type="button" data-bs-toggle="collapse"
                                                        data-bs-target="#visitFilters" aria-expanded="false">
                                                        <i class="bi bi-sliders me-1"></i>Filters
                                                    </button>
                                                </div>

                                                <!-- Submit -->
                                                <div class="col-auto">
                                                    <button type="submit" class="btn btn-primary">Search</button>
                                                </div>
                                            </div>

                                            <!-- Advanced Filters (Collapsible) -->
                                            <div class="collapse mt-3 <%= (filters.status && filters.status !== 'all') || (filters.department && filters.department !== 'all') || filters.date_from ? 'show' : '' %>"
                                                id="visitFilters">
                                                <div class="bg-light rounded p-3">
                                                    <div class="row g-3">
                                                        <div class="col-md-4">
                                                            <label
                                                                class="form-label small fw-bold text-muted text-uppercase">Status</label>
                                                            <select class="form-select" name="status">
                                                                <option value="all">All Status</option>
                                                                <option value="pending" <%=filters.status==='pending'
                                                                    ? 'selected' : '' %>>Pending</option>
                                                                <option value="in-progress"
                                                                    <%=filters.status==='in-progress' ? 'selected' : ''
                                                                    %>>In Progress</option>
                                                                <option value="completed"
                                                                    <%=filters.status==='completed' ? 'selected' : '' %>
                                                                    >Completed</option>
                                                                <option value="cancelled"
                                                                    <%=filters.status==='cancelled' ? 'selected' : '' %>
                                                                    >Cancelled</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <label
                                                                class="form-label small fw-bold text-muted text-uppercase">Department</label>
                                                            <select class="form-select" name="department">
                                                                <option value="all">All Depts</option>
                                                                <% if (departments && departments.length> 0) { %>
                                                                    <% departments.forEach(d=> { %>
                                                                        <option value="<%= d.department %>"
                                                                            <%=filters.department===d.department
                                                                            ? 'selected' : '' %>><%= d.department %>
                                                                        </option>
                                                                        <% }); %>
                                                                            <% } %>
                                                            </select>
                                                        </div>
                                                        <div class="col-md-4">
                                                            <label
                                                                class="form-label small fw-bold text-muted text-uppercase">From
                                                                Date</label>
                                                            <input type="date" class="form-control" name="date_from"
                                                                value="<%= filters.date_from %>">
                                                        </div>
                                                        <div class="col-12 text-end">
                                                            <a href="/admin/visits"
                                                                class="text-decoration-none small text-danger">
                                                                <i class="bi bi-x-circle me-1"></i>Reset Filters
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>

                                    <div class="table-responsive">
                                        <table class="table table-hover align-middle mb-0">
                                            <thead class="bg-light">
                                                <tr>
                                                    <th class="ps-4 py-3 text-uppercase text-secondary small fw-bold">
                                                        Date & ID</th>
                                                    <th class="py-3 text-uppercase text-secondary small fw-bold">Patient
                                                    </th>
                                                    <th class="py-3 text-uppercase text-secondary small fw-bold">
                                                        Department</th>
                                                    <th class="py-3 text-uppercase text-secondary small fw-bold">Status
                                                    </th>
                                                    <th
                                                        class="pe-4 py-3 text-end text-uppercase text-secondary small fw-bold">
                                                        Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (visits && visits.length> 0) { %>
                                                    <% visits.forEach(v=> { %>
                                                        <tr>
                                                            <td class="ps-4">
                                                                <div class="fw-bold text-dark">
                                                                    <%= new Date(v.visit_date).toLocaleDateString() %>
                                                                </div>
                                                                <small class="text-muted font-monospace">
                                                                    <%= v.visit_id.substring(0, 8) %>...
                                                                </small>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    <div class="avatar-circle bg-light text-secondary me-2 small fw-bold"
                                                                        style="width: 32px; height: 32px;">
                                                                        <%= (v.patient_name || 'U'
                                                                            ).charAt(0).toUpperCase() %>
                                                                    </div>
                                                                    <div>
                                                                        <div class="fw-medium text-dark">
                                                                            <%= v.patient_name %>
                                                                        </div>
                                                                        <div class="small text-muted">
                                                                            <%= v.medical_number || 'No ID' %>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex flex-column">
                                                                    <span
                                                                        class="badge bg-light text-dark border w-auto align-self-start">
                                                                        <%= v.department || 'General' %>
                                                                    </span>
                                                                    <small class="text-muted mt-1">
                                                                        <%= v.visit_type || 'Walk-in' %>
                                                                    </small>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <% if (v.visit_status==='completed' ) { %>
                                                                    <span
                                                                        class="badge bg-success-subtle text-success rounded-pill px-2"><i
                                                                            class="bi bi-check-circle-fill me-1"></i>Completed</span>
                                                                    <% } else if (v.visit_status==='in-progress' ) { %>
                                                                        <span
                                                                            class="badge bg-info-subtle text-info rounded-pill px-2"><i
                                                                                class="bi bi-hourglass-split me-1"></i>In
                                                                            Progress</span>
                                                                        <% } else if (v.visit_status==='cancelled' ) {
                                                                            %>
                                                                            <span
                                                                                class="badge bg-danger-subtle text-danger rounded-pill px-2"><i
                                                                                    class="bi bi-x-circle me-1"></i>Cancelled</span>
                                                                            <% } else { %>
                                                                                <span
                                                                                    class="badge bg-warning-subtle text-warning rounded-pill px-2"><i
                                                                                        class="bi bi-clock me-1"></i>Pending</span>
                                                                                <% } %>
                                                            </td>
                                                            <td class="pe-4 text-end">
                                                                <div class="btn-group">
                                                                    <a href="/admin/visits/<%= v.visit_id %>"
                                                                        class="btn btn-sm btn-outline-primary"
                                                                        title="View Details">
                                                                        <i class="bi bi-eye"></i> Details
                                                                    </a>
                                                                    <!-- Print (Compact) -->
                                                                    <% if (v.visit_status !=='cancelled' ) { %>
                                                                        <a href="/admin/visits/<%= v.visit_id %>/print-compact"
                                                                            target="_blank"
                                                                            class="btn btn-sm btn-outline-secondary"
                                                                            title="Print Report">
                                                                            <i class="bi bi-printer"></i>
                                                                        </a>
                                                                        <% } %>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td colspan="5" class="text-center py-5">
                                                                        <div class="text-muted">
                                                                            <i
                                                                                class="bi bi-calendar-x display-4 mb-3 d-block opacity-25"></i>
                                                                            <p class="mb-0">No visits found matching
                                                                                your criteria.</p>
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                    </main>
            </div>
    </div>
    <%- include('partials/scripts') %>
</body>

</html>