<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visit Management - Al-Shorouk Radiology Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <%- include('navigation', { currentPage: 'admin' }) %>

    <div class="container mt-4" id="main-content" role="main">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <!-- Breadcrumbs -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/"><i class="fas fa-home me-1" aria-hidden="true"></i>Home</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/admin">Admin</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Visit Management</li>
                    </ol>
                </nav>

                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h2><i class="fas fa-calendar-check me-2" aria-hidden="true"></i>Visit Management</h2>
                        <p class="text-muted">Manage patient visits and appointments</p>
                    </div>
                    <a href="/admin/visits/new" class="btn btn-info btn-custom">
                        <i class="fas fa-plus me-2" aria-hidden="true"></i>Add New Visit
                    </a>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-section">
            <form method="GET" action="/admin/visits" class="row g-3">
                <div class="col-md-3">
                    <label for="search" class="form-label">
                        <i class="fas fa-search me-1"></i>Search
                    </label>
                    <input type="text" class="form-control" id="search" name="search"
                           placeholder="Patient name, SSN, or medical number"
                           value="<%= filters.search || '' %>">
                </div>
                <div class="col-md-2">
                    <label for="status" class="form-label">
                        <i class="fas fa-circle me-1"></i>Status
                    </label>
                    <select class="form-select" id="status" name="status">
                        <option value="all" <%= !filters.status || filters.status === 'all' ? 'selected' : '' %>>All Status</option>
                        <option value="open" <%= filters.status === 'open' ? 'selected' : '' %>>Open</option>
                        <option value="in_progress" <%= filters.status === 'in_progress' ? 'selected' : '' %>>In Progress</option>
                        <option value="completed" <%= filters.status === 'completed' ? 'selected' : '' %>>Completed</option>
                        <option value="cancelled" <%= filters.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="department" class="form-label">
                        <i class="fas fa-building me-1"></i>Department
                    </label>
                    <select class="form-select" id="department" name="department">
                        <option value="all" <%= !filters.department || filters.department === 'all' ? 'selected' : '' %>>All Departments</option>
                        <% departments.forEach(dept => { %>
                            <option value="<%= dept.department %>" <%= filters.department === dept.department ? 'selected' : '' %>>
                                <%= dept.department %>
                            </option>
                        <% }); %>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="date_from" class="form-label">
                        <i class="fas fa-calendar-alt me-1"></i>From Date
                    </label>
                    <input type="date" class="form-control" id="date_from" name="date_from"
                           value="<%= filters.date_from || '' %>">
                </div>
                <div class="col-md-2">
                    <label for="date_to" class="form-label">
                        <i class="fas fa-calendar-alt me-1"></i>To Date
                    </label>
                    <input type="date" class="form-control" id="date_to" name="date_to"
                           value="<%= filters.date_to || '' %>">
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-1"></i>Filter
                    </button>
                </div>
            </form>

            <!-- Real-time Search -->
            <div class="row mt-3">
                <div class="col-12">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" class="form-control" id="liveSearch" placeholder="Quick search within current results...">
                        <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <small class="text-muted mt-1 d-block">
                        <i class="fas fa-info-circle me-1"></i>
                        Showing <span id="visibleCount">0</span> of <span id="totalCount">0</span> visits
                    </small>
                    <div class="bulk-actions mt-2" id="bulkActions" style="display: none;">
                        <small class="text-muted me-2"><span id="selectedCount">0</span> selected</small>
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="button" class="btn btn-outline-success" id="bulkComplete">
                                <i class="fas fa-check me-1"></i>Mark Complete
                            </button>
                            <button type="button" class="btn btn-outline-warning" id="bulkCancel">
                                <i class="fas fa-ban me-1"></i>Cancel Visits
                            </button>
                            <button type="button" class="btn btn-outline-primary" id="bulkExport">
                                <i class="fas fa-download me-1"></i>Export Data
                            </button>
                            <button type="button" class="btn btn-outline-danger" id="bulkDelete">
                                <i class="fas fa-trash me-1"></i>Delete
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Visits Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <% if (visits && visits.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th width="40">
                                                <input type="checkbox" class="form-check-input" id="selectAllVisits">
                                            </th>
                                            <th class="sortable" data-column="0">
                                                <i class="fas fa-calendar me-1"></i>Visit Date
                                                <i class="fas fa-sort sort-icon"></i>
                                            </th>
                                            <th class="sortable" data-column="1">
                                                <i class="fas fa-user me-1"></i>Patient
                                                <i class="fas fa-sort sort-icon"></i>
                                            </th>
                                            <th class="sortable" data-column="2">
                                                <i class="fas fa-id-card me-1"></i>Medical #
                                                <i class="fas fa-sort sort-icon"></i>
                                            </th>
                                            <th class="sortable" data-column="5">
                                                <i class="fas fa-circle me-1"></i>Status
                                                <i class="fas fa-sort sort-icon"></i>
                                            </th>
                                            <th class="sortable" data-column="6">
                                                <i class="fas fa-user-nurse me-1"></i>Created By
                                                <i class="fas fa-sort sort-icon"></i>
                                            </th>
                                            <th class="sortable" data-column="7">
                                                <i class="fas fa-clipboard-list me-1"></i>Assessments
                                                <i class="fas fa-sort sort-icon"></i>
                                            </th>
                                            <th><i class="fas fa-cogs me-1"></i>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% visits.forEach(visit => { %>
                                            <tr>
                                                <td>
                                                    <input type="checkbox" class="form-check-input visit-checkbox" data-visit-id="<%= visit.visit_id %>">
                                                </td>
                                                <td>
                                                    <div>
                                                        <strong><%= new Date(visit.visit_date).toLocaleDateString() %></strong>
                                                        <br>
                                                        <small class="text-muted"><%= new Date(visit.visit_date).toLocaleTimeString() %></small>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <strong><%= visit.patient_name %></strong>
                                                        <br>
                                                        <small class="text-muted">SSN: <%= visit.patient_ssn %></small>
                                                    </div>
                                                </td>
                                                <td><%= visit.medical_number %></td>
                                                <td>
                                                    <% if (visit.visit_status === 'completed') { %>
                                                        <span class="badge status-completed"><i class="fas fa-check-circle me-1"></i>Completed</span>
                                                    <% } else if (visit.visit_status === 'in_progress') { %>
                                                        <span class="badge status-in-progress"><i class="fas fa-clock me-1"></i>In Progress</span>
                                                    <% } else if (visit.visit_status === 'open') { %>
                                                        <span class="badge status-open"><i class="fas fa-circle me-1"></i>Open</span>
                                                    <% } else if (visit.visit_status === 'cancelled') { %>
                                                        <span class="badge status-cancelled"><i class="fas fa-times-circle me-1"></i>Cancelled</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary"><%= visit.visit_status %></span>
                                                    <% } %>
                                                </td>
                                                <td><%= visit.created_by_name || 'System' %></td>
                                                <td>
                                                    <span class="badge bg-info"><%= visit.assessment_count %> assessment(s)</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/admin/visits/<%= visit.visit_id %>" class="btn btn-sm btn-outline-primary" title="View Details">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a href="/admin/visits/<%= visit.visit_id %>/print" class="btn btn-sm btn-outline-success" title="Print Visit" target="_blank">
                                                            <i class="fas fa-print"></i>
                                                        </a>
                                                        <button type="button" class="btn btn-sm btn-outline-danger" title="Delete Visit"
                                                                onclick="confirmDeleteVisit('<%= visit.visit_id %>', '<%= visit.patient_name %>', '<%= visit.visit_date %>')">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                                <h4>No Visits Found</h4>
                                <p class="text-muted">No visits match your current filters.</p>
                                <a href="/admin/visits" class="btn btn-primary">
                                    <i class="fas fa-times me-2"></i>Clear Filters
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <% if (visits && visits.length > 0) { %>
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-calendar-check fa-2x text-primary mb-2"></i>
                            <h4><%= visits.length %></h4>
                            <p class="text-muted mb-0">Total Visits</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                            <h4><%= visits.filter(v => v.visit_status === 'completed').length %></h4>
                            <p class="text-muted mb-0">Completed</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                            <h4><%= visits.filter(v => v.visit_status === 'in_progress').length %></h4>
                            <p class="text-muted mb-0">In Progress</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-center">
                        <div class="card-body">
                            <i class="fas fa-clipboard-list fa-2x text-info mb-2"></i>
                            <h4><%= visits.reduce((sum, v) => sum + v.assessment_count, 0) %></h4>
                            <p class="text-muted mb-0">Total Assessments</p>
                        </div>
                    </div>
                </div>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-hide notification after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const notificationAlert = document.getElementById('notificationAlert');
            if (notificationAlert) {
                setTimeout(function() {
                    const alert = new bootstrap.Alert(notificationAlert);
                    alert.close();
                }, 5000); // 5 seconds
            }

            // Real-time search functionality
            const liveSearch = document.getElementById('liveSearch');
            const clearSearch = document.getElementById('clearSearch');
            const visitTable = document.querySelector('.table tbody');
            const rows = visitTable ? Array.from(visitTable.querySelectorAll('tr')) : [];
            const visibleCount = document.getElementById('visibleCount');
            const totalCount = document.getElementById('totalCount');
            let currentSort = { column: -1, direction: 'asc' };

            // Set initial counts
            if (totalCount) totalCount.textContent = rows.length;
            if (visibleCount) visibleCount.textContent = rows.length;

            function filterVisits() {
                const searchTerm = liveSearch.value.toLowerCase().trim();
                let visibleRows = 0;

                rows.forEach(row => {
                    if (!row.cells || row.cells.length < 8) return; // Skip if not a data row

                    const patientName = row.cells[1].textContent.toLowerCase();
                    const medicalNumber = row.cells[2].textContent.toLowerCase();
                    const diagnosis = row.cells[3].textContent.toLowerCase();
                    const department = row.cells[4].textContent.toLowerCase();
                    const createdBy = row.cells[6].textContent.toLowerCase();

                    const matchesSearch = !searchTerm ||
                        patientName.includes(searchTerm) ||
                        medicalNumber.includes(searchTerm) ||
                        diagnosis.includes(searchTerm) ||
                        department.includes(searchTerm) ||
                        createdBy.includes(searchTerm);

                    if (matchesSearch) {
                        row.style.display = '';
                        visibleRows++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                if (visibleCount) visibleCount.textContent = visibleRows;

                // Re-apply current sort to visible rows
                if (currentSort.column >= 0) {
                    sortTable(currentSort.column, currentSort.direction, false);
                }

                // Update bulk actions after filtering
                updateBulkActions();
            }

            function sortTable(columnIndex, direction, updateSort = true) {
                const tbody = visitTable;
                const visibleRows = Array.from(rows).filter(row => row.style.display !== 'none');

                visibleRows.sort((a, b) => {
                    let aVal = a.cells[columnIndex].textContent.trim();
                    let bVal = b.cells[columnIndex].textContent.trim();

                    // Special handling for date column (column 0)
                    if (columnIndex === 0) {
                        // Extract date from the cell (format: "MM/DD/YYYY")
                        const aDateMatch = aVal.match(/(\d{1,2}\/\d{1,2}\/\d{4})/);
                        const bDateMatch = bVal.match(/(\d{1,2}\/\d{1,2}\/\d{4})/);
                        if (aDateMatch && bDateMatch) {
                            aVal = new Date(aDateMatch[1]);
                            bVal = new Date(bDateMatch[1]);
                        }
                    } else if (columnIndex === 7) {
                        // Assessment count - extract number
                        const aMatch = aVal.match(/(\d+)/);
                        const bMatch = bVal.match(/(\d+)/);
                        aVal = aMatch ? parseInt(aMatch[1]) : 0;
                        bVal = bMatch ? parseInt(bMatch[1]) : 0;
                    } else {
                        aVal = aVal.toLowerCase();
                        bVal = bVal.toLowerCase();
                    }

                    if (direction === 'asc') {
                        return aVal > bVal ? 1 : aVal < bVal ? -1 : 0;
                    } else {
                        return aVal < bVal ? 1 : aVal > bVal ? -1 : 0;
                    }
                });

                // Clear existing rows and re-append sorted ones
                visibleRows.forEach(row => tbody.appendChild(row));

                if (updateSort) {
                    // Update sort indicators
                    document.querySelectorAll('.sortable').forEach(header => {
                        header.classList.remove('sort-asc', 'sort-desc');
                    });

                    const header = document.querySelector(`.sortable[data-column="${columnIndex}"]`);
                    if (header) {
                        header.classList.add(`sort-${direction}`);
                    }

                    currentSort = { column: columnIndex, direction };
                }

                // Update bulk actions after sorting
                updateBulkActions();
            }

            function clearLiveSearch() {
                liveSearch.value = '';
                filterVisits();
                liveSearch.focus();
            }

            // Add sorting event listeners
            document.querySelectorAll('.sortable').forEach(header => {
                header.addEventListener('click', function() {
                    const columnIndex = parseInt(this.dataset.column);
                    let direction = 'asc';

                    if (currentSort.column === columnIndex && currentSort.direction === 'asc') {
                        direction = 'desc';
                    }

                    sortTable(columnIndex, direction);
                });
            });

            // Add event listeners
            if (liveSearch) {
                liveSearch.addEventListener('input', filterVisits);
            }
            if (clearSearch) {
                clearSearch.addEventListener('click', clearLiveSearch);
            }

            // Bulk operations functionality
            const selectAllCheckbox = document.getElementById('selectAllVisits');
            const visitCheckboxes = document.querySelectorAll('.visit-checkbox');
            const bulkActions = document.getElementById('bulkActions');
            const selectedCount = document.getElementById('selectedCount');
            const bulkCompleteBtn = document.getElementById('bulkComplete');
            const bulkCancelBtn = document.getElementById('bulkCancel');
            const bulkExportBtn = document.getElementById('bulkExport');
            const bulkDeleteBtn = document.getElementById('bulkDelete');

            function updateBulkActions() {
                const checkedBoxes = document.querySelectorAll('.visit-checkbox:checked');
                const count = checkedBoxes.length;

                if (selectedCount) selectedCount.textContent = count;

                if (count > 0) {
                    bulkActions.style.display = 'block';
                } else {
                    bulkActions.style.display = 'none';
                }

                // Update select all checkbox state
                const visibleCheckboxes = Array.from(visitCheckboxes).filter(cb => {
                    return cb.closest('tr').style.display !== 'none';
                });

                const checkedVisibleBoxes = visibleCheckboxes.filter(cb => cb.checked);

                if (selectAllCheckbox) {
                    selectAllCheckbox.checked = visibleCheckboxes.length > 0 && checkedVisibleBoxes.length === visibleCheckboxes.length;
                    selectAllCheckbox.indeterminate = checkedVisibleBoxes.length > 0 && checkedVisibleBoxes.length < visibleCheckboxes.length;
                }
            }

            // Select all functionality
            if (selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function() {
                    const visibleCheckboxes = Array.from(visitCheckboxes).filter(cb => {
                        return cb.closest('tr').style.display !== 'none';
                    });

                    visibleCheckboxes.forEach(cb => {
                        cb.checked = this.checked;
                    });

                    updateBulkActions();
                });
            }

            // Individual checkbox change events
            visitCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', updateBulkActions);
            });

            // Bulk action handlers
            if (bulkCompleteBtn) {
                bulkCompleteBtn.addEventListener('click', function() {
                    const selectedVisits = Array.from(document.querySelectorAll('.visit-checkbox:checked')).map(cb => cb.dataset.visitId);
                    if (selectedVisits.length === 0) return;

                    if (confirm(`Are you sure you want to mark ${selectedVisits.length} visit(s) as completed?`)) {
                        // Here you would typically send a POST request to bulk complete
                        alert('Bulk complete functionality would be implemented here with API call to complete visits: ' + selectedVisits.join(', '));
                    }
                });
            }

            if (bulkCancelBtn) {
                bulkCancelBtn.addEventListener('click', function() {
                    const selectedVisits = Array.from(document.querySelectorAll('.visit-checkbox:checked')).map(cb => cb.dataset.visitId);
                    if (selectedVisits.length === 0) return;

                    if (confirm(`Are you sure you want to cancel ${selectedVisits.length} visit(s)?`)) {
                        // Here you would typically send a POST request to bulk cancel
                        alert('Bulk cancel functionality would be implemented here with API call to cancel visits: ' + selectedVisits.join(', '));
                    }
                });
            }

            if (bulkExportBtn) {
                bulkExportBtn.addEventListener('click', function() {
                    const selectedVisits = Array.from(document.querySelectorAll('.visit-checkbox:checked')).map(cb => cb.dataset.visitId);
                    if (selectedVisits.length === 0) return;

                    // Here you would typically send a POST request to export selected visits
                    alert('Bulk export functionality would be implemented here with API call to export visits: ' + selectedVisits.join(', '));
                });
            }

            if (bulkDeleteBtn) {
                bulkDeleteBtn.addEventListener('click', function() {
                    const selectedVisits = Array.from(document.querySelectorAll('.visit-checkbox:checked')).map(cb => cb.dataset.visitId);
                    if (selectedVisits.length === 0) return;

                    if (confirm(`Are you sure you want to permanently delete ${selectedVisits.length} visit(s)? This action cannot be undone!`)) {
                        // Here you would typically send a POST request to bulk delete
                        alert('Bulk delete functionality would be implemented here with API call to delete visits: ' + selectedVisits.join(', '));
                    }
                });
            }

            // Initial update
            updateBulkActions();
        });
    </script>

    <!-- Delete Visit Confirmation Modal -->
    <div class="modal fade" id="deleteVisitModal" tabindex="-1" aria-labelledby="deleteVisitModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteVisitModalLabel">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirm Visit Deletion
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-warning me-2"></i>
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>
                    <p>Are you sure you want to delete the visit for <strong id="deletePatientName"></strong>?</p>
                    <p class="text-muted">Visit Date: <strong id="deleteVisitDate"></strong></p>
                    <ul class="text-muted">
                        <li>The visit record will be permanently removed</li>
                        <li>All associated assessments will be deleted</li>
                        <li>Patient history for this visit will be lost</li>
                        <li>This action affects medical records and cannot be reversed</li>
                    </ul>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Cancel
                    </button>
                    <form id="deleteVisitForm" method="POST" class="d-inline">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Yes, Delete Visit
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Handle delete visit modal
        function confirmDeleteVisit(visitId, patientName, visitDate) {
            document.getElementById('deletePatientName').textContent = patientName;
            document.getElementById('deleteVisitDate').textContent = new Date(visitDate).toLocaleDateString();
            document.getElementById('deleteVisitForm').action = `/admin/visits/${visitId}/delete`;

            const modal = new bootstrap.Modal(document.getElementById('deleteVisitModal'));
            modal.show();
        }
    </script>
</body>
</html>