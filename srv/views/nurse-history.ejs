<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('partials/head', { title: 'Assessment History' }) %>
</head>

<body class="bg-light">
    <!-- Navbar -->
    <%- include('navigation', { currentPage: 'history' }) %>

        <div class="container py-4">
            <div class="row">
                <!-- Main Content -->
                <div class="col-12">
                    <!-- Header & Search -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h4 class="mb-1 text-primary fw-bold">Assessment History</h4>
                            <p class="text-muted mb-0">View and search your completed assessments</p>
                        </div>
                        <div>
                            <a href="/nurse" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>

                    <!-- Search Card -->
                    <div class="card border-0 shadow-sm rounded-3 mb-4">
                        <div class="card-body p-4">
                            <form action="/nurse/history" method="GET" class="row g-3">
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-end-0">
                                            <i class="bi bi-search text-muted"></i>
                                        </span>
                                        <input type="text" class="form-control border-start-0 bg-light ps-0" name="q"
                                            placeholder="Search by patient name, SSN, or medical number..."
                                            value="<%= searchQuery %>">
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-primary w-100 h-100">
                                        Search
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Results Grid -->
                    <% if (history && history.length> 0) { %>
                        <div class="row g-3">
                            <% history.forEach(visit=> { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card h-100 border-0 shadow-sm rounded-3 hover-shadow transition-all">
                                        <div class="card-body p-3">
                                            <!-- Header: Date & Status -->
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <div>
                                                    <div class="fw-medium text-dark small">
                                                        <i class="bi bi-calendar3 me-1 text-muted"></i>
                                                        <%= new Date(visit.submitted_at).toLocaleDateString() %>
                                                    </div>
                                                    <div class="text-xs text-muted ms-4">
                                                        <%= new Date(visit.submitted_at).toLocaleTimeString([],
                                                            {hour: '2-digit' , minute:'2-digit'}) %>
                                                    </div>
                                                </div>
                                                <span class="badge bg-success-subtle text-success rounded-pill px-2">
                                                    Submitted
                                                </span>
                                            </div>

                                            <!-- Patient Info -->
                                            <div class="d-flex align-items-center mb-3">
                                                <div
                                                    class="avatar-circle bg-primary-subtle text-primary me-3 small flex-shrink-0">
                                                    <%= (visit.patient_name || 'U' ).charAt(0).toUpperCase() %>
                                                </div>
                                                <div class="overflow-hidden">
                                                    <h6 class="fw-bold text-dark mb-0 text-truncate">
                                                        <%= visit.patient_name %>
                                                    </h6>
                                                    <div class="small text-muted">
                                                        <%= visit.gender %>, <%= visit.calculated_age || 'N/A' %>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Identifiers -->
                                            <div class="bg-light rounded p-2 mb-3">
                                                <div class="d-flex justify-content-between align-items-center mb-1">
                                                    <small class="text-muted">SSN</small>
                                                    <small class="fw-medium text-dark">
                                                        <%= visit.patient_ssn %>
                                                    </small>
                                                </div>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small class="text-muted">Medical ID</small>
                                                    <small class="fw-medium text-dark">
                                                        <%= visit.medical_number || 'N/A' %>
                                                    </small>
                                                </div>
                                            </div>

                                            <!-- Footer: Dept & Action -->
                                            <div
                                                class="d-flex justify-content-between align-items-center pt-3 border-top">
                                                <span class="badge bg-white text-secondary border">
                                                    <%= visit.department || 'General' %>
                                                </span>
                                                <a href="/nurse/assessment/<%= visit.visit_id %>"
                                                    class="btn btn-sm btn-outline-primary rounded-pill px-3 stretched-link">
                                                    View
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                        <% } else { %>
                            <div class="card border-0 shadow-sm rounded-3">
                                <div class="card-body py-5 text-center">
                                    <div class="text-muted">
                                        <i class="bi bi-clipboard-x display-4 mb-3 d-block opacity-25"></i>
                                        <p class="mb-0">No assessments found matching your search.</p>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                </div>
            </div>
        </div>

        <%- include('partials/scripts') %>
</body>

</html>